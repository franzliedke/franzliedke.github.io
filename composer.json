{
    "require": {
        "tightenco/jigsaw": "^0.5.0",
        "symfony/debug": "^3.0"
    },
    "scripts": {
        "build": "jigsaw build --pretty=false",
        "watch": "gulp && gulp watch",
        "build-production": "gulp --production && jigsaw build --env=production --pretty=false",
        "deploy-production": "GIT_DEPLOY_DIR=build_production GIT_DEPLOY_BRANCH=master scripts/deploy.sh",
        "deploy": [
            "@build-production",
            "@deploy-production"
        ]
    }
}
